alias sg=search_groovy
alias sig=searchi_groovy

alias sc=search_cpp
alias sic=searchi_cpp

alias sj=search_java
alias sij=searchi_java

alias sx=search_xml
alias six=searchi_xml

alias sp=search_pxml
alias sip=searchi_pxml

alias sjs=search_js
alias sijs=searchi_js

alias shl=search_html
alias sihl=searchi_html
