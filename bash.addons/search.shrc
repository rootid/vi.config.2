search_cpp() {
	find . -follow -name '*.h' -or -name '*.cpp' | xargs grep -n "$1"
}

searchi_cpp() {
	find . -follow -name '*.h' -or -name '*.cpp' | xargs grep -in "$1"
}

search_groovy() {
	find . -follow -name '*.groovy' | xargs grep -n "$1"
}

searchi_groovy() {
	find . -follow -name '*.groovy' | xargs grep -in "$1"
}

search_java() {
	find . -follow -name '*.java' | xargs grep -n "$1"
}

searchi_java() {
	find . -follow -name '*.java' | xargs grep -in "$1"
}

search_xml() {
	find . -follow -name '*.xml' | xargs grep -n "$1"
}

searchi_xml() {
	find . -follow -name '*.xml' | xargs grep -in "$1"
}

search_pxml() {
	find . -follow -name 'pom.xml' | xargs grep -n "$1"
}

searchi_pxml() {
	find . -follow -name 'pom.xml' | xargs grep -in "$1"
}

search_html() {
	find . -follow -name '*.html' | xargs grep -n "$1"
}

searchi_html() {
